{
	"extends": "next/core-web-vitals",
	"rules": {
		"semi": [
			2,
			"always"
		],
		"sort-imports": [
			"error",
			{
				"ignoreCase": false,
				"ignoreDeclarationSort": true,
				"ignoreMemberSort": false,
				"memberSyntaxSortOrder": [
					"none",
					"all",
					"multiple",
					"single"
				],
				"allowSeparatedGroups": true
			}
		],
		"import/no-unresolved": "error",
		"import/order": [
			"error",
			{
				"groups": [
					"builtin",
					"external",
					"internal",
					[
						"sibling",
						"parent"
					],
					"index",
					"unknown"
				],
				"newlines-between": "always",
				"alphabetize": {
					"order": "asc",
					"caseInsensitive": true
				}
			}
		],
		"quotes": [
			2,
			"single"
		]
	}
}